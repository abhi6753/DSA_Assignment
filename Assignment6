#include <iostream>
using namespace std;

#define MAX 100

// Stack class for characters
class Stack {
    char arr[MAX];
    int top;

public:
    Stack() { top = -1; }

    // Push character onto stack
    void push(char c) {
        if (top == MAX - 1) {
            cout << "Stack Overflow!" << endl;
            return;
        }
        arr[++top] = c;
    }

    // Pop character from stack
    char pop() {
        if (top == -1) {
            cout << "Stack Underflow!" << endl;
            return '\0';
        }
        return arr[top--];
    }

    // Check if stack is empty
    bool isEmpty() {
        return top == -1;
    }

    // Get top element without removing it
    char peek() {
        if (top == -1)
            return '\0';
        return arr[top];
    }
};

// Function to check if parentheses are balanced
bool isBalanced(string expr) {
    Stack s;

    for (int i = 0; i < expr.length(); i++) {
        char c = expr[i];

        // If opening bracket, push to stack
        if (c == '(' || c == '{' || c == '[') {
            s.push(c);
        }
        // If closing bracket, check for matching opening
        else if (c == ')' || c == '}' || c == ']') {
            if (s.isEmpty()) {
                return false; // no matching opening bracket
            }

            char top = s.pop();

            // Check if brackets match
            if ((c == ')' && top != '(') ||
                (c == '}' && top != '{') ||
                (c == ']' && top != '[')) {
                return false;
            }
        }
    }

    // If stack is empty at the end ? balanced
    return s.isEmpty();
}

// Main function
int main() {
    string expr;

    cout << "Enter an expression: ";
    cin >> expr;

    if (isBalanced(expr))
        cout << "The expression has balanced parentheses." << endl;
    else
        cout << "The expression is NOT balanced." << endl;

    return 0;
}
